# Colors
colors.title = - Color Settings -
colors.setting.main.name = Main color
colors.setting.main.desc = Used for main background and maybe somewhere else^^.
colors.setting.element.name = Element color
colors.setting.element.desc = Used for coloring all kinds of elements. For example, buttons, checkboxes, inputs etc.
colors.setting.elementHover.name = Element hover color
colors.setting.elementHover.desc = Used for elements when you hover over them.
colors.setting.elementDisabled.name = Element disabled color
colors.setting.elementDisabled.desc = Used to color disabled, unusable elements.
colors.setting.elementHint.name = Element hint color
colors.setting.elementHint.desc = Used to color hint elements. For example, when hovering over button with a tooltip.
colors.setting.accent.name = Accent color
colors.setting.accent.desc = Used for such detail elements as icon and border colors.
colors.setting.accentHover.name = Accent hover color
colors.setting.accentHover.desc = Used for detail elements when you hover over them.
colors.setting.accentDisabled.name = Accent disabled color
colors.setting.accentDisabled.desc = Used for disabled detail elements.
colors.setting.text.name = Text color
colors.setting.text.desc = Used for most text, excluding other colors.

colors.setting.equipped.name = Equipped color
colors.setting.equipped.desc = Used for indicating equipped items in inventory. Requires BC Inventory integration to be enabled.
colors.setting.crafted.name = Crafted color
colors.setting.crafted.desc = Used for indicating crafted items in inventory. Requires BC Inventory integration to be enabled.
colors.setting.blocked.name = Blocked color
colors.setting.blocked.desc = Used for indicating blocked elements. Requires BC Inventory integration to be enabled.
colors.setting.limited.name = Limited color
colors.setting.limited.desc = Used for indicating limited items in inventory. Requires BC Inventory integration to be enabled.
colors.setting.allowed.name = Allowed color
colors.setting.allowed.desc = Used for indicating allowed permissions. Requires BC Inventory integration to be enabled.
colors.setting.roomFriend.name = Room Friend color
colors.setting.roomFriend.desc = Indicates room where friend is present.
colors.setting.roomBlocked.name = Room Block color
colors.setting.roomBlocked.desc = Indicates rooms that have blocked categories.
colors.setting.roomGame.name = Room Game color
colors.setting.roomGame.desc = Colors tooltip, that shows game in a room.

colors.button.change_input_type = Change inputs type

# Integration
integration.title = - Integrations -
integration.setting.inputs.name = Enable BC Inputs integration
integration.setting.inputs.desc = Changes CSS styles of BC to use Color Settings. Changes some interactable thingies.
integration.setting.inventory.name = Enable BC Inventory integration
integration.setting.inventory.desc = Allows customizing colors for items slots in inventory. E.g. Equipped, Crafted, Blocked, Limited.
integration.setting.chat.name = Enable BC Chat integration
integration.setting.chat.desc = Changes CSS styles of BC to use Color Settings. Changes chat.
integration.setting.friendList.name = Enable BC Friend List integration
integration.setting.friendList.desc = Changes CSS styles of BC to use Color Settings. Changes background of friend list.
integration.setting.friendListBlur.name = Enable BC Friend List Blur
integration.setting.friendListBlur.desc = Adds blur to friend list background.
integration.setting.scrollbar.name = Enable scrollbar coloring
integration.setting.scrollbar.desc = Changes how scrollbar is colored.
integration.setting.selection.name = Enable selection coloring
integration.setting.selection.desc = Colors text selection.
integration.setting.WCE.name = Enable WCE integration
integration.setting.WCE.desc = Changes CSS styles of WCE to use Color Settings. Mostly changes Instant Messenger colors.
integration.setting.FUSAM.name = Enable FUSAM integration
integration.setting.FUSAM.desc = Changes CSS styles of FUSAM to use Color Settings. Changes FUSAM button with settings interface.
integration.setting.TTS.name = Enable TTS integration
integration.setting.TTS.desc = Changes CSS styles of TTS to use Color Settings. Changes settings interface with task window.
integration.setting.MBS.name = Enable MBS integration
integration.setting.MBS.desc = Changes CSS styles of MBS to use Color Settings. Changes settings interface in a whole.

