{
  "include": [
    "node_modules/bc-stubs/bc/**/*.d.ts",
    ".types/*.d.ts",
    "**/*.js",
    "**/*.ts",
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
		"esModuleInterop": true,
    
    "allowJs": false,
    "removeComments": false,
    "alwaysStrict": true,
    "skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"noEmit": true
  }
}
